{
  "name": "coding",
  "displayName": "Copilot",
  "description": "",
  "version": "0.0.1",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "coding.inFileChat",
        "key": "ctrl+j",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "coding.inFileChat",
          "group": "navigation"
        },
        {
          "command": "coding.fixSelectedError",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "coding",
      "properties": {
        "https://api.groq.com/openai/v1/chat/completions": {
          "type": "string",
          "default": "http://localhost:5000/complete",
          "description": "endpoint"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chatSidebar",
          "title": "AI Chat",
          "icon": "chat.svg"
        }
      ]
    },
    "views": {
      "chatSidebar": [
        {
          "id": "coding.sidebarView",
          "name": "AI Assistant",
          "type": "webview",
          "icon": "chat.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "coding.openChat",
        "title": "Open AI Chat"
      },
      {
        "command": "coding.clearChatHistory",
        "title": "Clear AI Chat History"
      },
      {
        "command": "coding.inFileChat",
        "title": "In file chat",
        "category": "Coding Tools"
      },
      {
        "command": "coding.fixError",
        "title": "Fixing Error",
        "category": "Problem Fixer"
      },
      {
        "command": "coding.generateCode",
        "title": "Code Generator",
        "category": "Coding Tools"
      },
      {
        "command": "coding.fixselectedcode",
        "title": "Code Replacer",
        "category": "Coding Tools"
      },
      {
        "command": "coding.fixFirstError",
        "title": "Code Diagnostic",
        "category": "Diagnostic"
      },
      {
        "command": "coding.fixDiagnostic",
        "title": "Fix my code",
        "category": "Diagnostic"
      },
      {
        "command": "coding.fixSelectedError",
        "title": "Fix Selected Error"
      },
      {
        "command": "coding.fixSelectedErrors",
        "title": "Fix Diagnostic"
      },
      {
        "command": "coding.explainselectedcode",
        "title": "Explain this code"
      },
      {
        "command": "coding.applyLLMFix",
        "title": "Diagnostic Fixer",
        "category": "Diagnostics"
      },
      {
        "command": "coding.reviewCode",
        "title": "Code Review",
        "category": "Explain code"
      },
      {
        "command": "coding.suggestCodeImprovements",
        "title": "Code suggest",
        "category": "Explain code"
      }
    ]
  },
  "bin": {
    "myext": "./dist/cli/index.js"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "build:cli": "tsc --project tsconfig.cli.json",
    "watch": "tsc --watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "cli": "ts-node --esm cli/index.ts"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/jquery": "^3.5.32",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.8",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@huggingface/inference": "^4.5.3",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.11.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "markdown-it": "^14.1.0",
    "marked": "^16.0.0",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "p-limit": "^6.2.0",
    "shiki": "^3.8.1",
    "together": "^0.0.11"
  }
}
