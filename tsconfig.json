{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "./out",
		"lib": [
			"ES2022", "DOM"
		],
		"sourceMap": true,
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["src","src/cli"],
	"exclude": ["node_modules",".vscode-test"]
}
